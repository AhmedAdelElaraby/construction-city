<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Confirm_Phone">
        <ProgressBar
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:background="@drawable/coustem_progress"
            android:layout_marginTop="@dimen/_155sdp"
            android:id="@+id/progress"
            android:visibility="gone"
            android:elevation="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/_16sdp"
            app:layout_constraintTop_toTopOf="parent"/>


        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_90sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/logo"
            android:id="@+id/logo" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/please_enter_the_activation_code"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo"
            android:layout_marginTop="@dimen/_20sdp"
            style="@style/text"
            android:fontFamily="@font/alfont_com_sfproar_semibold"
            android:textSize="@dimen/_13sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:id="@+id/text_dscrption"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginEnd="@dimen/_15sdp"
    android:layout_marginStart="@dimen/_15sdp"
    app:layout_constraintTop_toBottomOf="@id/text_dscrption"
    android:layout_marginTop="@dimen/_10sdp"
    android:background="@drawable/backgrund_spinner_login"
    android:id="@+id/l1"
    tools:ignore="Orientation">
    <com.alimuzaffar.lib.pin.PinEntryEditText
        android:id="@+id/txt_pin_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:cursorVisible="true"
        android:inputType="number"

        android:layoutDirection="ltr"
        android:maxLength="6"
        android:textColor="@color/black"
        android:textIsSelectable="false"
        android:textSize="@dimen/_20sdp"
        app:pinAnimationType="popIn"
        app:pinBackgroundIsSquare="true"
        app:pinLineColors="#27A4DA"
        app:pinLineStroke="@dimen/_2sdp"
        app:pinLineStrokeSelected="@dimen/_4sdp"
        app:pinTextBottomPadding="@dimen/_20sdp"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />



</LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/code_has_not_arrived"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/l1"
            android:layout_marginTop="25dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:theme="@style/text"
            android:fontFamily="@font/alfont_com_sfproar_semibold"
            android:layout_marginStart="20dp"
            android:id="@+id/reternsendpasswordtext" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/return_send_code"
            app:layout_constraintStart_toEndOf="@id/reternsendpasswordtext"
            app:layout_constraintTop_toBottomOf="@id/l1"
            android:layout_marginTop="25dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:theme="@style/text"
            android:fontFamily="@font/alfont_com_sfproar_semibold"

            android:layout_marginStart="20dp"
            android:id="@+id/retern_send_password" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_3sdp"
            android:id="@+id/l"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/teraninja_logo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/development_by"
                android:textSize="@dimen/_10sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:textColor="#18A7E0"
                android:fontFamily="@font/alfont_com_sfproar_semibold"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:text="@string/company_tera_ninja_2022"
                android:layout_gravity="center"
                android:textColor="#18A7E0"
                android:fontFamily="@font/alfont_com_sfproar_semibold"/>





        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>